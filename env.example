# Server Configuration
PORT=4000

# Email Configuration (for notifications)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# Google Sheets Configuration
# Note: Place your credentials.json file in the root directory
# SPREADSHEET_ID is configured in services/sheetsService.js

# Production Configuration
NODE_ENV=production

# SSL Configuration (for HTTPS)
# Generate certificates with:
# openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -days 365 -nodes
SSL_KEY=key.pem
SSL_CERT=cert.pem

# Network Configuration
# For mobile access, set your network IP
# Find with: ifconfig | grep "inet " | grep -v 127.0.0.1
HOST=0.0.0.0

# Cache Configuration
CACHE_DURATION=30000

# Branding
COMPANY_NAME=Robovision
COMPANY_URL=https://robovision.in
COMPANY_LOGO=https://robovision.in/assets/logo-white.png
